#!/bin/sh

# Determine path to this script's directory.
dir="$(pwd)"
bin="$0"
while [ -L "${bin}" ]
do
    x="$(readlink "${bin}")"
    cd "$(dirname "${bin}")"
    bin="${x}"
done
cd "$(dirname "${bin}")"/.. || exit 1
home="$(pwd)"

# Configure platforms.
case `uname` in
  Darwin)
    set -x
    cp "${home}/bin/com.tarsnap.gui.plist" "${HOME}/Library/LaunchAgents/com.tarsnap.gui.plist"
    launchctl remove com.tarsnap.gui
    launchctl load "${HOME}/Library/LaunchAgents/com.tarsnap.gui.plist"
    ;;
esac
